<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IOmniEYE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/grotem_style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/iOmniEYE.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@3.3.0/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/call-icon.css" />
    

</head>
@RenderSection("Scripts", required: false)
<body class="grotem-body">
            <script>
              (function() {
                const theme = localStorage.getItem('themePreference');
                if (theme === 'dark') {
                  document.body.classList.add('theme-dark');
                } else {
                  document.body.classList.remove('theme-dark'); // Explicitly remove if light is preferred
                }
              })();
            </script>
            <div id="fixedControlsPanel">
                <button id="themeSwitcherButton" style="background: none; border: none; cursor: pointer; color: white; display: block; width: 100%; text-align: left; padding: 5px 0;">Switch Theme</button>
                <div id="headerLanguageSwitcher" style="width: 100%;"> <!-- Ensure this div also takes full width for its children -->
                    <button class="language-button-header" data-lang="ru" style="color: white; background-color: rgba(255,255,255,0.1); border: 1px solid rgba(255,255,255,0.2); padding: 8px 5px; border-radius: 4px; display: block; width: 100%; text-align: left; margin-top: 5px;">RU</button>
                    <button class="language-button-header" data-lang="en" style="color: white; background-color: rgba(255,255,255,0.1); border: 1px solid rgba(255,255,255,0.2); padding: 8px 5px; border-radius: 4px; display: block; width: 100%; text-align: left; margin-top: 5px;">EN</button>
                </div>
            </div>
    <header>
        <div style="text-align: right; padding: 1rem;" id="_LayoutSimpleHeader"> <!-- Re-using ID from _Layout.cshtml for consistent styling -->

        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/theme_switcher.js" asp-append-version="true"></script>
    <div id="successPopup" class="popup-message">✅ Заявка успешно отправлена!</div>

</body>

</html>